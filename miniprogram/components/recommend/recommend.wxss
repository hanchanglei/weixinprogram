.search{
  padding-left: 30rpx;
  margin: 30rpx 30rpx 0;
  height:80rpx;
  background-color: #eee;
  text-align: center;
  border-radius: 10rpx;
}
.img{
  margin-right: 40rpx;
  width: 20px;
  height: 20px;
  vertical-align: -3px;
}
.search text{
  line-height: 80rpx;
  color: #aaa;
}
.select{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  width: 100vw;
  white-space: nowrap;
}
.select view{
  display: inline-block;
  margin-left: 50rpx;
  font-weight: bold;
  font-size: 14px;
}
.banner swiper-item{
  width: 100%;
  height: 350rpx;
  margin: 0 auto;
}
.banner swiper-item image{
  margin: 0 auto;
  width: 100%;
  height: 350rpx;
}